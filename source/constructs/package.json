{
    "name": "sensitive-data-protection-on-aws",
    "version": "1.1.0",
    "bin": {
        "sensitive-data-protection": "bin/main.js"
    },
    "scripts": {
        "cleanup": "tsc --build ./ --clean && rm -rf node_modules && rm -f package-lock.json",
        "cleanup:tsc": "tsc --build ./ --clean",
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest --coverage",
        "cdk": "cdk",
        "eslint": "eslint --ext .ts,tsx lib/** --no-error-on-unmatched-pattern",
        "cfn-nag": "cfn_nag_scan --fail-on-warnings -b .cfn-nag-ignore-lists.yml --input-path $file"
    },
    "devDependencies": {
        "@types/jest": "^29.2.1",
        "@types/node": "^14",
        "@typescript-eslint/eslint-plugin": "^5",
        "@typescript-eslint/parser": "^5",
        "esbuild": "^0.15.12",
        "eslint": "^8",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-import-resolver-node": "^0.3.6",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-standard": "^5.0.0",
        "jest": "^29.2.2",
        "jest-junit": "^13",
        "json-schema": "^0.4.0",
        "npm-check-updates": "^16",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "aws-cdk-lib": "^2.102.0",
        "cdk-bootstrapless-synthesizer": "^2.2.7",
        "cdk-nag": "^2.20.6"
    },
    "license": "Apache-2.0",
    "jest": {
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.ts?(x)",
            "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
        ],
        "clearMocks": true,
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "lcov",
            "clover",
            "cobertura",
            "text"
        ],
        "coverageDirectory": "coverage",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "watchPathIgnorePatterns": [
            "/node_modules/"
        ],
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "outputDirectory": "test-reports"
                }
            ]
        ],
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.dev.json"
            }
        }
    }
}